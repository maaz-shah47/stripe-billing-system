<%= form_for @plan, validate: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, validate: true, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :monthly_fee %>
    <%= f.number_field :monthly_fee, in: 1.0..1000.0, step: 0.5, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
  