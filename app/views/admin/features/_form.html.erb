<%= form_for [@plan, @feature], validate: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :code %>
    <%= f.text_field :code, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :unit_price %>
    <%= f.number_field :unit_price, in: 1.0..1000.0, step: 0.5, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :max_unit_limit %>
    <%= f.number_field :max_unit_limit, in: 1..1000, step: 1, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
