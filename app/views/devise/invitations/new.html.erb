<h2><%= t "devise.invitations.new.header" %></h2>

<%= form_for(resource, as: resource_name, url: invitation_path(resource_name), validate: true, html: { method: :post }) do |f| %>
  <%#= render "devise/shared/error_messages", resource: resource %>
  <%= bootstrap_devise_error_messages! %>

  <% resource.class.invite_key_fields.each do |field| -%>
    <div class="form-group">
      <%= f.label field %><br />
      <%= f.text_field field, autofocus: true, class: 'form-control' %>
    </div>
  <% end -%>

  <%# <div class="actions"> %>
  <div class="form-group">
    <%= f.submit t("devise.invitations.new.submit_button"), class: 'btn btn-primary' %>
  </div>
<% end %>
